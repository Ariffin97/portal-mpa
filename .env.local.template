# Local Development Environment Configuration
# Copy this file to .env.local and uncomment/modify as needed

# MongoDB Configuration for Local Development
# Uncomment to use local MongoDB instead of Atlas
# MONGODB_URI=mongodb://localhost:27017/malaysia-pickleball-portal

# Force local database usage (overrides MONGODB_URI)
USE_LOCAL_DB=true

# Server Configuration  
PORT=5001

# API Configuration (local)
REACT_APP_API_URL=http://localhost:5001/api

# Environment
NODE_ENV=development

# Sync Configuration
# Set to false to disable sync in local development (prevents Atlas interference)
ENABLE_DATABASE_SYNC=true

# Email Configuration (optional for local testing)
# EMAIL_USER=your-test-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Note: When USE_LOCAL_DB=true, the system will use:
# - New DB: mongodb://localhost:27017/malaysia-pickleball-portal-dev  
# - Old DB: mongodb://localhost:27017/malaysia-pickleball-dev
# This ensures complete local isolation from Atlas